<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangular_top_radius"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_weight="80"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Welcome in O2Home Cough Assesment Activity."
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@mipmap/coughing"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:autoLink="phone|web"
        android:linksClickable="true"
        android:gravity="center"
        android:text="We have Integrated a Cough Assesment Feature. Please take a moment to check your cough using Voice Asssement."
        android:textColor="@color/textDark"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:autoLink="phone|web"
        android:linksClickable="true"
        android:gravity="center"
        android:text="Hello"
        android:visibility="gone"
        android:textColor="@color/textDark"
        android:textSize="@dimen/_15sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        >

        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/btn_rectangular"
            android:text="@string/exit"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />


        <Button
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/btn_rectangular"
            android:text="Proceed"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>





</LinearLayout>